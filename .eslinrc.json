{
        "extends": "eslint:recommended",
        "env": {
            "es6": true,
            "node": true
        },
        "parserOptions": {
            "sourceType": "module"
        },
        "rules": {
            "semi": [
                "warn",
                "always"
            ],
            "no-unused-vars": [
                "warn",
                {
                    "vars": "all",
                    "args": "none"
                }
            ]
        }
    }